<% if @article.errors.any? %>
<h3>One of the following errors is perventing the article form getting created</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
    </p>
    <p>
      <%= f.label :discreption %><br>
      <%= f.text_area :discreption %>
    </p>
      <%= f.submit %>
<% end %>

<p>
  <%= link_to "Back to list", articles_path %>
</p>
