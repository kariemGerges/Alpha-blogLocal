<h1 align="center" >Sign up for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="form-group">
  <div class="col-sm-12">
      <%= form_for @user do |f| %>
        <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :username %>
          </div>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>
    <div class="form-group">
      <div class="control-label col-sm-2"
        <%= f.label :email %>
        </div>
        <div class="col-sm-10">
        <%= f.email_field :email, rows: 10, class:"form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2"
        <%= f.label :password %>
        </div>
        <div class="col-sm-10">
        <%= f.password_field :password_digest, class:"form-control", placeholder: "Enter password" %>
      </div>
    </div>
          <div class="form-group">
            <div class="col-sm-10">
              <%= f.submit 'Signup', class: "btn btn-warning btn-lg" %>
      </div>
      </div>
      <% end %>
        <div class="col-md-4 offset-md-4">
          [ <%= link_to "Cancel request and back to article listing", articles_path %> ]
    </div>
  </div>
</div>
