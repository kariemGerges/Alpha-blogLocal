<%= form_for @category do |f| %>
  <div class="form-group">
  <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
<div class="col-sm-10">
  <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
</div>
</div>
    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-warning btn-lg" %>
</div>
</div>
<% end %>
